{
  "compilerOptions": {
    "incremental": true,
    "module": "commonjs",
    "target": "es2020",
    "lib": [
      "es2020",
      "dom"
    ],
    "baseUrl": ".",
    "outDir": "dist",
    "rootDir": "src",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "importHelpers": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "declaration": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "strict": true,
    "useUnknownInCatchVariables": false
  },
  "include": [
    "src"
  ],
  "exclude": [
    "**/dist",
    "**/temp"
  ]
}